<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import
            type="com.example.travel_app_secondapp.entities.Travel.DateConverter"/>
        <variable
            name="travel"
            type="com.example.travel_app_secondapp.entities.Travel" />
        <variable
            name="registered"
            type="com.example.travel_app_secondapp.adapters.registeredAdapter.IRegistered" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#EDF8E0">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="75dp"
            android:layout_height="130dp"
            android:padding="8dp"
            android:src="@drawable/icon_bus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Spinner
            android:id="@+id/companySpinner"
            android:layout_width="174dp"
            android:layout_height="45dp"
            android:entries="@{travel.companyKeys}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/createdTextView"
            app:layout_constraintTop_toBottomOf="@+id/createdTextView" />

        <TextView
            android:id="@+id/startTextView"
            android:layout_width="140dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"

            android:text="@{`start: ` + DateConverter.dateToTimestamp(travel.arrivalDate)}"

            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/endTextView"
            app:layout_constraintStart_toEndOf="@+id/iconImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/createdTextView"
            android:layout_width="140dp"
            android:layout_height="26dp"

            android:text="@{`created: ` + DateConverter.dateToTimestamp(travel.createDate)}"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/companySpinner"
            app:layout_constraintStart_toStartOf="@+id/startTextView"

            app:layout_constraintTop_toBottomOf="@+id/startTextView" />

        <TextView
            android:id="@+id/numPassengersTextView"
            android:layout_width="140dp"
            android:layout_height="26dp"
            android:text="@{`passengers: ` + travel.numPassengers}"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/createdTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/createdTextView"
            app:layout_constraintTop_toTopOf="@+id/createdTextView" />

        <TextView
            android:id="@+id/endTextView"
            android:layout_width="140dp"
            android:layout_height="26dp"
            android:text="@{`end: ` + DateConverter.dateToTimestamp(travel.travelDate)}"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/startTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/startTextView"
            app:layout_constraintTop_toTopOf="@+id/startTextView" />

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:onClick="@{() -> registered.accept(companySpinner.getSelectedItem().toString(), travel)}"
            android:text="accept"
            app:layout_constraintBottom_toBottomOf="@+id/companySpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/companySpinner"
            app:layout_constraintTop_toTopOf="@+id/companySpinner"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>